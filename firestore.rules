rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
    		allow create: if userAuthenticated() && userOwnsNewDoc();
        allow update: if userAuthenticated() && userOwnsOldDoc() && userOwnsNewDoc();
        allow read, delete: if userAuthenticated() && userOwnsOldDoc();
    }
    function userOwnsOldDoc() {
    		return request.auth.uid == resource.data.userId;
    }
    function userOwnsNewDoc() {
      	return request.auth.uid == request.resource.data.userId;
    }
    function userAuthenticated() {
      return request.auth.uid != null; 
    }
	}
}
